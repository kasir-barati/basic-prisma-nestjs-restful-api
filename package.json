{
    "name": "project-name",
    "version": "0.0.1",
    "description": "A comprehensive RESTful API boilerplate. NestJS, Prisma, Postgres",
    "author": "Kasir Barati",
    "license": "GPL-3.0",
    "keywords": [
        "nestjs",
        "prisma",
        "docker",
        "postgres",
        "argon2",
        "restful api",
        "boilerplate",
        "typescript"
    ],
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build --path tsconfig.release.json",
        "format": "prettier --write '**/*.ts' '**/*.js' '**/*.json'",
        "start": "nest start",
        "start:dev": "nest start --path tsconfig.json --watch --preserveWatchOutput",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint 'src/**/*.ts' --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.ts --watch",
        "prepare": "husky install",
        "compose:dev:up": "docker-compose -f dev.docker-compose.yml up",
        "compose:dev:down": "docker-compose -f dev.docker-compose.yml down --remove-orphans",
        "prisma:dev": "npx prisma generate && npx prisma db push && npx prisma db seed"
    },
    "dependencies": {
        "@nestjs/common": "^8.0.0",
        "@nestjs/config": "^1.1.6",
        "@nestjs/core": "^8.0.0",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/mapped-types": "*",
        "@nestjs/passport": "^8.2.1",
        "@nestjs/platform-express": "^8.0.0",
        "@nestjs/swagger": "^5.1.5",
        "@prisma/client": "^3.8.1",
        "@sentry/node": "^6.19.7",
        "argon2": "^0.28.5",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "cookie-parser": "^1.4.6",
        "csurf": "^1.11.0",
        "express-winston": "^4.2.0",
        "google-libphonenumber": "^3.2.27",
        "helmet": "^5.0.1",
        "husky": "^7.0.4",
        "multer": "^1.4.4",
        "nanoid": "^3.3.1",
        "nest-winston": "^1.6.2",
        "passport": "^0.5.2",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "swagger-ui-express": "^4.3.0",
        "winston": "^3.3.3",
        "winston-daily-rotate-file": "^4.6.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^8.0.0",
        "@nestjs/schematics": "^8.0.0",
        "@nestjs/testing": "^8.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/csurf": "^1.11.2",
        "@types/express": "^4.17.13",
        "@types/google-libphonenumber": "^7.4.23",
        "@types/jest": "27.0.2",
        "@types/multer": "^1.4.7",
        "@types/node": "^16.0.0",
        "@types/passport-jwt": "^3.0.6",
        "@types/passport-local": "^1.0.34",
        "@types/supertest": "^2.0.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^26.0.0",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.2.5",
        "lint-staged": "^12.3.2",
        "prettier": "^2.3.2",
        "prisma": "^3.7.0",
        "prisma-class-generator": "^0.1.12",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "^3.10.1",
        "typescript": "^4.3.5"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    }
}
